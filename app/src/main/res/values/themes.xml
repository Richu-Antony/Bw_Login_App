<resources>

    <!-- Base application theme. -->
    <style name="Theme.BwLogin" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colors - Primary -->
        <item name="colorPrimary">#6750A4</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#EADDFF</item>
        <item name="colorOnPrimaryContainer">#21005D</item>
        <!-- Colors - Background -->
        <item name="android:colorBackground">#FFFBFE</item>
        <item name="colorOnBackground">#1C1B1F</item>
        <item name="colorSurface">#FFFBFE</item>
        <item name="colorOnSurface">#1C1B1F</item>
        <!-- Colors - Error -->
        <item name="colorError">#B3261E</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorErrorContainer">#F9DEDC</item>
        <item name="colorOnErrorContainer">#410E0B</item>
        <!-- Colors - Outline -->
        <item name="colorOutline">#79747E</item>
        <item name="colorSurfaceVariant">#E7E0EC</item>
        <item name="colorOnSurfaceVariant">#49454F</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Transition -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/bauhs93</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="InputLayout" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="Textfield">
        <item name="android:fontFamily">@font/poppins_extrabold</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLength">30</item>
    </style>

    <style name="ButtonC">
        <item name="android:fontFamily">@font/poppins_extrabold</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="TextC">
        <item name="fontFamily">@font/poppins_extrabold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>